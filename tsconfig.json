{
  "compilerOptions": {
    "lib": [], // intentionally left blank
    "module": "CommonJS",
    "target": "ES3",
    "ignoreDeprecations": "5.0", // ES3 target will be deprecated in TypeScript 5.5.

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node10",

    "declaration": true,
    "sourceMap": true,

    "outDir": "lib",
  },

  "include": ["src/index.ts", "src/**/*.d.ts", "src/DateLike.ts"],
  "exclude": ["node_modules"]
}
